{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "substrate identity ensure --session-id $CLAUDE_SESSION_ID --project \"$PWD\" && substrate poll --format context"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "substrate poll --format context --quiet"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "substrate identity save --session-id $CLAUDE_SESSION_ID"
          }
        ]
      }
    ]
  }
}
