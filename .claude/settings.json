{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [{
          "type": "command",
          "command": "substrate heartbeat --session-start --format context 2>/dev/null; substrate poll --format context --quiet 2>/dev/null || true"
        }]
      }
    ],
    "UserPromptSubmit": [{
      "matcher": "",
      "hooks": [{
        "type": "command",
        "command": "substrate poll --format context --quiet 2>/dev/null || true"
      }]
    }],
    "Stop": [{
      "matcher": "",
      "hooks": [{
        "type": "command",
        "command": "./scripts/check-tasks-complete.sh"
      }]
    }]
  }
}
